    ARGS=$*
else
    ARGS=main
fi

NODE_PATH="${MACH_HOME}/node_modules" ${MACH_HOME}/node_modules/.bin/lumo -c ${MACH_HOME}/src:${MACH_CLASSPATH} ${MACH_HOME}/src/mach/core.cljs $ARGS
